generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  id      Int @id @default(autoincrement())
  type    String
  wins    Int
  losses  Int
  name    String @default("boonanner")
}

model Fight {
  id        Int @id @default(autoincrement())
  maxRounds Int @default(3)
  rounds    Round[]
  winner    String
}

model Round {
  id          Int @id @default(autoincrement())
  fight       Fight @relation(fields: [fightId], references: [id])
  fightId     Int
  roundNum    Int
  heroRoll    Int
  villainRoll Int
  winner      String
}